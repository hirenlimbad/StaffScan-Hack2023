{
  "version": 2,
  "builds": [
    {
      "src": "Application/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "Application/wsgi.py"
    }
  ],
  "env": {
    "MYSQL_CONFIG": "path/to/your/mysql_config" 
  },
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.9",
      "includeFiles": "Application/**/*"
    }
  }
}
